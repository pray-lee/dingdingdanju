.scroll-info-list{
    height: calc(100vh - 128rpx)
}
.scroll-info-list.iphoneX{
    height: calc(100vh - 196rpx)
}
.info-item{
    display:flex;
    background:#fff;
    position:relative;
    font-size: 28rpx;
    color:#333;
    padding: 24rpx;
    padding-left: 30rpx;
    margin-bottom: 20rpx;
    border-radius: 9rpx
}
.btn-area.iphoneX{
    padding-bottom: 68rpx
}
.btn-area button{
    width: 100%;
    border:0;
    background:#3276c3;
    border-radius: 0;
    color:#fff;
    font-size: 32rpx;
    height: 100rpx;
    line-height: 100rpx
}
.dept-name{
    flex: 1;
    display:flex;
    align-items: center;
}
.line{
    width: 4rpx;
    color:#cccccc
}
.next{
    width: 1rem;
    font-weight:bold;
    color:#3276c3;
    text-align:center;
}
