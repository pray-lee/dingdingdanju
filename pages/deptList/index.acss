.checkbox-dept{
    display:block
}
.checkbox-text{
    padding-left: 20rpx;
}
.search-wrapper{
    position:relative;
    margin-bottom: 20rpx
}
.search-wrapper input{
    box-sizing:border-box;
    width: 100%;
    height: 100%;
    font-size: 28rpx;
    border-radius: 4px;
    padding: 24rpx;
}
